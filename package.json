{
  "name": "doogie-de-pug",
  "private": false,
  "description": "Roberts personal blog. Created with love and the awesome PUG library",
  "license": "open source",
  "version": "1.0.0",
  "author": "Doogie",
  "scripts": {
    "start": "parcel site/index.pug --log-level 4",
    "build": "parcel build site/index.pug",
    "buildSite": "node buildSite.js",
    "supervisor": "supervisor -w site --extensions js,pug,json,css --no-restart-on success buildSite.js",
    "front": "reload --dir dist --watch-dir dist --port 3007 --browser"
  },
  "dependencies": {
    "json5": "^2.1.0",
    "ncp": "^2.0.0",
    "parcel": "^1.12.4",
    "pug": "2.0.4"
  },
  "keywords": [
    "doogie.de",
    "static site generator"
  ],
  "devDependencies": {
    "cssnano": "^4.1.10",
    "nodemon": "^1.19.2",
    "reload": "^3.0.1",
    "supervisor": "^0.12.0"
  },
  "nodemonConfig": {
    "watch": [
      "buildSite.js",
      "site"
    ],
    "ext": "js,pug,json,css,png.jpg,md"
  }
}
