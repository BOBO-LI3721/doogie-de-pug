{
  "name": "doogie-de-2019-pug",
  "private": false,
  "description": "Roberts private homepage. Created with love and the awesome PUG library",
  "license": "open source",
  "version": "0.1.0",
  "author": "Doogie",
  "scripts": {
	"start": "nodemon buildSite.js",
	"build": "node buildSite.js",
    "supervisor": "supervisor -w site --extensions js,pug,json,css --no-restart-on success buildSite.js",
    "front": "reload --dir dist --watch-dir dist --port 3007 --browser"
  },
  "dependencies": {
    "json5": "^2.1.0",
    "ncp": "^2.0.0",
    "pug": "2.0.4"
  },
  "keywords": [
    "doogie.de",
    "static site generator"
  ],
  "devDependencies": {
    "nodemon": "^1.19.2",
    "reload": "^3.0.1",
    "supervisor": "^0.12.0"
  },
  "nodemonConfig": {
    "watch": [
      "site"
    ],
    "ext": "js,pug,json,css,png.jpg,md"
  }
}
