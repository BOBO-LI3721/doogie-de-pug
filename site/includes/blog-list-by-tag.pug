
if !posts || posts.length === 0
	p No posts in this blog yet!

ul.blog-list
	each post in posts
		li.blog-list-item
			a.excerpt-link(href=post.url)
				.hero-image-wrapper(style='background-image: url("/static/images/'+post.img+'");')
				.excerpt-content-wrapper
					.excerpt-content
						h1.post-title= post.title
						span.post-date= post.date
						p.post-excerpt= post.excerpt